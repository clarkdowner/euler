// What is the smallest positive number that is evenly divisible by all of the numbers from 1 to 20?

let smallest = (number) => {
	let smallestNum = number * (number - 1);

	for (let i = number - 2; i > 0; i--) {
		let diff = 	smallestNum % i;
		if (diff !== 0) {
			// find out how many times it will take to fit evenly into i
			// that is the number of times we need to adjust by

			// update smallestNum accordingly 
		}
	}

	return smallestNum;
}

