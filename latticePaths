// Starting in the top left corner of a 2×2 grid, and only being able to move to the right 
// and down, there are exactly 6 routes to the bottom right corner.


// How many such routes are there through a 20×20 grid?


var paths = (size) => {
	let pathCount = 0;
	// debugger;
	let counter = (x, y) => {

		if (x === size && y === size) {
			pathCount++;
			return;
		}

		if (x < size) {
			counter(x + 1, y);
		}
		if (y < size) {
			counter(x, y + 1);
		}
	}
	counter(0, 0);

	return pathCount;
}